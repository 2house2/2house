<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <style>
      /* Email styles need to be inline */
    </style>
  </head>

  <body>
    <% if user_signed_in? %>
  <p>Hola, <%= current_user.email %> | <%= link_to 'Cerrar sesión', destroy_user_session_path, method: :delete %></p>
<% else %>
  <p><%= link_to 'Iniciar sesión', new_user_session_path %> |
     <%= link_to 'Registrarse', new_user_registration_path %> |
     <%= link_to '¿Olvidaste tu contraseña?', new_user_password_path %></p>
<% end %>
  </body>
</html>
